<section class="container">
  <h1>{{title}}</h1>

  {{#each items}}
    <div class="posting">
      <div class="current_entry_data">
        <img src="{{this.imgLocation}}" class="img">
        <p><span class="headings">Description: </span> {{this.description}}</p>
        <p><span class="headings">Category: </span> {{this.category}}</p>
        <p><span class="headings">Location: </span> {{this.coordinates.lat}},  {{this.coordinates.lng}}</p>
      </div>
        <form id="updateForm" action="/updateSpot" method="post" enctype="multipart/form-data">
          <div class="input">
            <label for="img">New Image</label>
            <input type="file" name="myimg">
          </div>
          <div class="input">
            <label for="location">Location</label>
            <input type="text" placeholder="Enter Latitude" id="lat" name="lat">
            <input type="text" placeholder="Enter Longitude" id="lng" name="lng">
          </div>
          <div class="input">
            <label for="description">Description</label>
            <input type="text" id="description" name="description">
          </div>
          <div class="input">
            <label for="category">Category</label>
            <input type="text" id="category" name="category">
          </div>
          <div class="input">
          <label for="id">Id</label>
          <input type="text" id="id" name="id" readonly value="{{this._id}}">
          </div>
          <button type="submit">Update</button>
        </form>
        <button class="deleteEntry">Delete Entry</button>
        <p class="entryID" style="visibility: hidden">{{this._id}}</p>
    </div>
  {{/each}}
  <script src="updateSpots.js"></script>
